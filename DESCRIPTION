Package: LMChla
Title: Great Lakes water quality data harmonizer
Version: 0.0.0.9000
Authors@R: c(
    person("Kelsey", "Vitense", 
    email = "vitense.kelsey@epa.gov", 
    role = c("aut", "cre"), 
    comment = c(ORCID = "0000-0003-2455-5513")
